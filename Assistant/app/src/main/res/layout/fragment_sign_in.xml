<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".view.ui.fragment.auth.sign_in.SignInFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center_horizontal"
                android:text="Увійдіть у ваш акаунт"
                android:textColor="@color/background_text"
                android:textSize="24sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:hint="Електронна пошта"
                app:startIconDrawable="@drawable/ic_sign_in_email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_field_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:hint="Пароль"
                app:endIconMode="password_toggle"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:startIconDrawable="@drawable/ic_sign_in_lock">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_sign_in"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:lines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_about_rights"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center_horizontal"
                android:text="Натискаючи на Увійти, Ви погоджуєтеся з Умовами використання та Політикою конфіденційності"
                android:textColor="@color/background_text"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/mod_button"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="center"
                android:text="Увійти"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:gravity="center_horizontal"
                android:text="Забули пароль?"
                android:textColor="@color/background_text"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="end|center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_image_4" />
    </LinearLayout>
</ScrollView>