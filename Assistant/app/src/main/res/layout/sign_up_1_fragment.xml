<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".view.ui.sign_up.fragment.SignUpInputPhoneNumberFragment">

    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="end|center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_launcher_image_2" />

        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lora_bold"
            android:gravity="center_horizontal"
            android:text="Верифікуйте ваш акаунт"
            android:textColor="@color/background_text"
            android:textSize="24sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_field_phone_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:hint="Номер телефону"
            app:startIconTint="@null"
            android:theme="@style/EditTextColorCustom"
            app:helperTextTextColor="@color/error">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number_sign_up"
                android:layout_width="310dp"
                android:layout_height="match_parent"
                android:lines="1"
                android:maxLength="20"
                android:textColorLink="@color/light_purple"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            style="@style/NoBackgroundTintButton"
            android:background="@drawable/mod_button"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center"
            android:text="@string/create"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>